<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackgroundFloating"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_margin="16dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="8dp">


                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tttt" />


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="110dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Teatro Salvador"
                        android:textAppearance="@android:style/TextAppearance.Holo.Medium"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vamos de Teatro hoje ?"
                        android:textAppearance="@android:style/TextAppearance.Holo.Small"
                        android:textSize="15sp" />

                </LinearLayout>


            </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/Teatros"
                    style="@style/Teatro"
                    android:layout_width="132dp"
                    android:layout_height="120dp"
                    android:layout_marginVertical="45dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/listea"
                    app:cardElevation="10dp" />


                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/Eventos"
                    style="@style/Teatro"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginVertical="45dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/evento"
                    app:cardElevation="10dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/Ingressos"
                    style="@style/Teatro"
                    android:layout_width="132dp"
                    android:layout_height="120dp"
                    android:layout_marginVertical="45dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/ingressos"
                    app:cardElevation="10dp" />


                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/Mapas"
                    style="@style/Teatro"
                    android:layout_width="132dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginVertical="45dp"
                    android:background="@drawable/mapa"
                    app:cardElevation="10dp" />


            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>
